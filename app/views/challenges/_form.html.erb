      <%= text_field_tag :text, @challenge.text, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= label_tag :sport  %>
      <%= text_field_tag :sport_id, @challenge.sport, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= label_tag :location  %>
      <%= text_field_tag :location_id, @challenge.location, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= hidden_field_tag :creator_id, @challenge.creator_id, class: "form-control"  %>
    </div>
  </div>
  <%= submit_tag "Save challenge", class: "btn btn-default" %>
<% end %>
